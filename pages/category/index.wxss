page {
  overflow: hidden;
}
van-search {
  position: fixed;
  width: 100%;
  z-index: 100;
}
.content {
  padding-top: 108rpx;
  display: flex;
}
.content .menu {
  width: 160rpx;
  height: calc(100vh - 108rpx);
  color: #333;
  font-size: 26rpx;
  background: #f7f8fa;
}
.content .menu view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-left: 6rpx solid transparent;
}
.content .menu view.active {
  color: #ff2d4a;
  background-color: #fff;
  border-left-color: #ff2d4a;
}
.content .container {
  flex: 1;
  height: calc(100vh - 108rpx);
}
.content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.content .goods_group .goods_list navigator {
  width: 33.33333%;
  text-align: center;
}
.content .goods_group .goods_list navigator image {
  width: 50%;
}
.content .goods_group .goods_list .goods_name {
  padding-bottom: 8rpx;
}